<section id="beer">
    <div class="page-header">
        <h1><%= @shoe.name %></h1>
    </div>

    <div class="row">
       
        <div class="span5">
            <% @shoes.each do |shoe| %>
                <h3><%= shoe.key[1] %></h3>
                <table class="table table-bordered table-striped table-hover">
                    <tbody>        
                            <tr>
                                <th>Colors</th>
                                <td><%= shoe.key[3] %></td>
                            </tr>
                            <tr>
                                <th>Size</th>
                                <td><%= shoe.key[2] %></td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td><%= shoe.key[4] %></td>
                            </tr>                
                            <tr>
                                <th>ID</th>
                                <td><%= shoe.key[0] %></td>
                            </tr>
                    </tbody>
                </table>
            <% end %>
        </div>
    </div>

</section>
