<section id="beers">
    <div class="page-header">
        <h1>Lookup shoe</h1>
    </div>
    <%= form_tag breweries_path(:format => :json), :class => "well form-search", :method => :get, :remote => true do %>
        <div class="input-append">
            <%= text_field_tag "start_key", nil, :class => "input-xlarge search-query", :placeholder => "Start typing shoe name..." %>
            <%= submit_tag "Filter", :name => nil, :class => "btn" %>
        </div>
    <% end %>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th><abbr title="ID">ID</abbr></th>
            </tr>
        </thead>
        <%= content_tag(:tbody, :id => "lookup_table", :data => {:url => shoes_path(:format => :json), :start_key => @last_key} ) do %>
            <% @shoes.each do |shoe| %>
                <tr>
                    <td><%= link_to shoe.name, shoe_path(shoe) %></td>
                    <td><%= shoe.id %></td>
                </tr>
            <% end %>
        <% end %>
    </table>
    <%= button_tag("More", :id => "more-btn", :class => "btn btn-primary btn-large row-fluid") %>
</section>

